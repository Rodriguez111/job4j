<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.url">jdbc:hsqldb:mem:carsell;sql.enforce_size=false</property>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.hbm2ddl.auto">update</property>


        <mapping class="sellcars.models.Car"/>
        <mapping class="sellcars.models.CarBrand"/>
        <mapping class="sellcars.models.Transmission"/>
        <mapping class="sellcars.models.CarBody"/>
        <mapping class="sellcars.models.Engine"/>
        <mapping class="sellcars.models.Advert"/>
        <mapping class="sellcars.models.User"/>
        <mapping class="sellcars.models.Photo"/>

    </session-factory>

</hibernate-configuration>