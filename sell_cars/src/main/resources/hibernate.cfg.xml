<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/carsell</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
<!--        <property name="show_sql">true</property>-->
        <property name="hibernate.hbm2ddl.auto">update</property>


        <mapping class="sellcars.models.Car"/>
        <mapping class="sellcars.models.CarBrand"/>
        <mapping class="sellcars.models.Transmission"/>
        <mapping class="sellcars.models.CarBody"/>
        <mapping class="sellcars.models.Engine"/>
        <mapping class="sellcars.models.Advert"/>
        <mapping class="sellcars.models.User"/>
        <mapping class="sellcars.models.Photo"/>

    </session-factory>



</hibernate-configuration>